builds:
  - binary: strapp
    goos:
      - darwin
      - linux
    goarch:
      - amd64
      - arm64
    env:
      - CGO_ENABLED=0

release:
  prerelease: auto

universal_binaries:
  - replace: true

brews:
  - name: strapp
    homepage: "https://github.com/mwei2509/strapp-cli"
    tap:
      owner: mwei2509
      name: homebrew-mwei2509
    commit_author:
      name: mwei2509
      email: m2dl89@gmail.com

checksum:
  name_template: "checksums.txt"
