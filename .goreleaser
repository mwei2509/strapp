builds:
  - binary: strapp
    goos:
      - darwin
      - linux
    goarch:
      - amd64
      - arm64
    env:
      - CGO_ENABLED=0
    flags:
      - -mod=vendor

release:
  prerelease: auto

universal_binaries:
  - replace: true

brews:
  - #
    name: strapp
    homepage: "https://github.com/mwei2509/strapp"
    tap:
      owner: mwei2509
      name: homebrew-mwei2509

checksum:
  name_template: "checksums.txt"
